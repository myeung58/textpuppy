<p>welcome back, <%= @user.username %>!</p>
<button onclick="recognize()">Start Voice Commands</button>
<button onclick="stop()">Stop Voice Commands</button>

<div class="contacts">
  <a class="create-contact" href="/users/<%= @user.id %>/contacts/new">New Contact</a> 
  <% @user.contacts.each do |contact| %>
    <p><%= contact.contact_name %></p>
    <p><%= format_phone_num(contact.phone) %></p>
  <% end %>
</div>

<div class="texting">
  <a class="text-contact" href="/users/<%=@user.id%>/contacts/text">Text my contact(s)</a>
</div>

<a href="/signout">Log out</a>
